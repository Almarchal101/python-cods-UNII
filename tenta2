"""
def datause(seq: list):
    
    result = []
    sum = 0
    
    
    for element in range(len(seq)):
        
        if isinstance(seq[element], (int, float)):
            sum += seq[element]
            
        elif seq[element] is None:
            result.append(sum)
            sum = 0
        
            
    result.append(sum)
   
    if result:
        max_value = max(result)
        result.append(max_value) 
    else:
        result.append(0)   
    

    return result

print(datause([]))
print(datause([2,2,2, None, None, None, 1, 1, 1]))

print(datause([12, None]) )
print(datause([1, 5, 17, 2]))
print(datause([None, 1, 12, 5, None, 22, 21, None, 2]) )
print(datause([12, None]) == [12, 0, 12])
print(datause([1, 5, 17, 2]) == [25, 25])
print( datause([None, 1, 12, 5, None, 22, 21, None, 2]) == [0, 18, 43,2, 43])


