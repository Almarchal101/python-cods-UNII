# 2.

def rle_i(seq):
    result = []
    antal = 1
    
    if not seq:
        return []
            
    
    for element in range(len(seq)-1):
        
        if seq[element] == seq[element + 1]:
            antal += 1
        elif seq[element] != seq[element + 1]:
            result.append((antal, seq[element])) 
            antal = 1
        
    
    
    
    result.append((antal, seq[element]))
        
        
        
        
    return result
        
print(rle_i(["a"]))
print(rle_i(["a","a","b","a","c","c"]) )
print(rle_i([1,2,2,2,2,5,5,5,5,5,5,1,1,1]) == [(1,1), (4,2), (6,5), (3,1)])
print(rle_i(["a","a","b","a","c","c"]) == [(2,"a"), (1,"b"), (1,"a"), (2,"c")])
print(rle_i("ABBBBCCCCCCCCCCAAA") == [(1,'A'), (4,'B'), (10,'C'), (3,'A')])
print(rle_i(""))


